{
    "name": "hauntpet/dashboard",
    "description": "The shared dashboard between the main app and a game.",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Lumite Studios",
            "email": "haunt@lumitestudios.com"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "laravel/framework": "^9.11",
        "blade-ui-kit/blade-heroicons": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "HauntPet\\Dashboard\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HauntPet\\Dashboard\\DashboardServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --tag=haunt-dashboard --force"
        ]
    }
}
